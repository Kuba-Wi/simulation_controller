<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot_simulation">

  <xacro:macro name="base_geometry">
    <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
      <geometry>
        <box size="0.6 0.4 0.1"/>
      </geometry>
  </xacro:macro>

  <xacro:macro name="wheel_description" params="name">
    <link name="${name}">
    <inertial>
        <mass value="5.0"/>
        <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
    <visual>
        <origin xyz="0.0 0.0 0.0" rpy="1.57075 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.0" rpy="1.57075 0 0"/>
        <geometry>
            <cylinder radius="0.1" length="0.05"/>
        </geometry>
    </collision>
  </link>
  </xacro:macro>

  <link name="base_link">
    <inertial>
      <mass value="10"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>

    <visual name="base_visual">
      <xacro:base_geometry />
    </visual>
    <collision name="base_collision">
      <xacro:base_geometry />
    </collision>
  </link>

  <xacro:wheel_description name="right_front_wheel" />
  <xacro:wheel_description name="right_back_wheel" />

  <joint name="right_front_joint" type="continuous">
    <origin xyz="0.15 -0.226 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="right_front_wheel"/>
    <axis xyz="0.0 1 0.0"/>
  </joint>

  <joint name="right_back_joint" type="continuous">
    <origin xyz="-0.15 -0.226 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="right_back_wheel"/>
    <axis xyz="0.0 1 0.0"/>
  </joint>

  <transmission name="right_front_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_front_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_front_motor">
        <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_back_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="right_back_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_back_motor">
        <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <xacro:wheel_description name="left_front_wheel" />
  <xacro:wheel_description name="left_back_wheel" />

  <joint name="left_front_joint" type="continuous">
    <origin xyz="0.15 0.226 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="left_front_wheel"/>
    <axis xyz="0.0 1 0.0"/>
  </joint>

  <joint name="left_back_joint" type="continuous">
    <origin xyz="-0.15 0.226 0.1" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="left_back_wheel"/>
    <axis xyz="0.0 1 0.0"/>
  </joint>

  <transmission name="left_front_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_front_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_front_motor">
        <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="left_back_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="left_back_joint">
        <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_back_motor">
        <mechanicalReduction>1.0</mechanicalReduction>
    </actuator>
  </transmission>

  <gazebo reference="right_front_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="right_back_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_front_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="left_back_wheel">
      <mu1 value="200.0"/>
      <mu2 value="100.0"/>
      <kp value="10000000.0" />
      <kd value="1.0" />
      <material>Gazebo/Blue</material>
  </gazebo>

  <!-- Gazebo plugin for ROS Control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>
